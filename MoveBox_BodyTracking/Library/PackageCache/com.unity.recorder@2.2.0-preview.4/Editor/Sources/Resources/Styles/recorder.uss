#recorderIcon {
    width : 50px;
    height : 50px;
    margin-left : 5px;
    margin-right : 20px;
    -unity-slice-top : 0;
    -unity-slice-bottom : 0;
    -unity-slice-left : 0;
    -unity-slice-right : 0;
    padding-top : 0;
    padding-left : 0;
    padding-bottom : 0;
    padding-right : 0;
    cursor : link;
}

.RecorderListHeader {
    margin-top : 0;
    margin-left : 0;
    margin-right : 0;
    margin-bottom: 0;
    height: 30px;
    align-self: center;
    border-left-width: 0;
    border-top-width: 0;
    border-right-width: 0;
    border-bottom-width: 1px;
}

#recordOptions {
    max-height: 16px;
    margin-bottom: 3px;
}

#addRecordersButton > Label {
    padding-left: 10px;
    -unity-text-align: middle-left;
    font-size: 12px;
}

#recorderListPreset {
    width: 20px;
    justify-content: center;
}

#recorderListPreset > Image {
    align-self: center;
    -unity-slice-top : 0;
    -unity-slice-bottom : 0;
    -unity-slice-left : 0;
    -unity-slice-right : 0;
    padding-top : 0;
    padding-left : 0;
    padding-bottom : 0;
    padding-right : 0;
}

#presetButton {
    width: 15px;
    height: 14px;
    margin-right: 10px;
    margin-top: 0;
    margin-bottom: 0;
}

.StandardPanel {
    margin-top : 15px;
    padding-left : 20px;
    padding-right : 20px;
    border-bottom-width:2px;
}

RecorderItem {
    margin-top : 4px;
    padding-left : 5px;
    padding-right : 5px;
    padding-top : 5px;
    padding-bottom : 5px;
    
    border-left-width:1px;
    border-top-width:1px;
    border-right-width:1px;
    border-bottom-width:1px;
}

RecorderItem.selected {
    border-left-width:1px;
    border-right-width:1px;
}

.RecorderItemIcon {
    width : 16px;
    height : 16px;
    margin-top : 2px;
    margin-left : 4px;
    margin-right : 4px;
}

RecorderItem.hasErrors > .RecorderItemIcon {
    width : 16px;
    height : 16px;
}

PanelSplitter {
    border-left-width:1px;
    border-top-width:0;
    border-right-width:1px;
    border-bottom-width:0;
    cursor: resize-horizontal;
}

#statusBar {
    padding-top: 5px;
    padding-bottom: 5px;
    padding-left: 5px;
    padding-right: 5px;
}

#recordButton {
    margin-left: 0;
    margin-right: 0;
    cursor : link;
}

#recordersPanel {
    margin-top: 0;
    padding-top: 0;
    padding-left: 0;
    padding-right: 0;
}

#recorderSettings {
    margin-left: 20px;
    margin-right: 30px;
}

